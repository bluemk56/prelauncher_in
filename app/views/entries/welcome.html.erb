      <div class="sep" ></div>
      <p style="font-weight: 800;color:#074E6F; text-transform: none">30% OFF<br>Coupon</p>
      <div class="tooltip">
        <img src="/refer/cream-tooltip@2x.png" height="254">
      </div>
    </li>
    
 

    <li class="product brandon <% if @percentage >= 25 %>selected<% end %>">
      <div class="circle">5</div>
      <div class="sep"></div>
      <p>40% OFF<br>Coupon</p>
      <div class="tooltip">
        <img src="/refer/cream-tooltip@2x.png" height="254">
      </div>
    </li>

    <li class="product brandon <% if @percentage >= 50 %>selected<% end %>">
      <div class="circle">10</div>
      <div class="sep"></div>
      <p>50% OFF<br>Coupon</p>

      <div class="tooltip">
        <img src="/refer/truman@2x.png" height="254">
      </div>
    </li>
    <li class="product brandon <% if @percentage >= 75 %>selected<% end %>">
      <div class="circle">15</div>
      <div class="sep"></div>
      <p>70% OFF<br>Coupon</p>

      <div class="tooltip">
        <img src="/refer/winston@2x.png" height="254">
      </div>
    </li>
    <li class="product brandon <% if @percentage >= 100 %>selected<% end %> last">
      <div class="circle">20</div>
      <div class="sep"></div>
      <p>Bebefit<br> for free</p>

      <div class="tooltip">
        <img src="/refer/blade-explain@2x.png" height="254">
      </div>
    </li>
  </ul>

  <div class="progress">
    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
        aria-valuemin="0" aria-valuemax="100" style="width: <%= @percentage>0 ? @percentage+(@percentage>=5 && @percentage<30?7:3):0 %>%">
      <%= @user.friend%>
    </div>
  </div>

</div>

<div class="col-lg-12 text-center">
	<div class="section-title">
		<% if @user.friend == 0 %>
		<div class="title_custom friends" style="text-transform: none; font-weight: bold; margin-top:0px;margin-bottom: 0px;font-size: 20px;"><span style="color: #7a0101;">No</span> friends have joined...Yet!</div>
		<% else %>
		<div class="title_custom friends" style="text-transform: none; font-weight: bold; margin-top:0px; margin-bottom: 0px; font-size: 20px;"><span style="color: #7a0101;"><%= @user.friend %></span> <%= words %> joined</div>	
		<% end %>

		<div style="margin-top: 0px;">Keep checking...</div>
		<div style= "margin-bottom: 0px; margin-top: 50px;">We ship to the U.S. & Canada</div>		
		</div>
	</div>
</div>





